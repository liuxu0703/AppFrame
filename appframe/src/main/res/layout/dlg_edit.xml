<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dlg_bkg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dlg_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:text="@string/dlg_edit_title"
        android:textColor="#525252"
        android:textSize="18sp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/dlg_edit_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@null"
        android:textColor="#525252"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:background="#d3d3d3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/dlg_edit_cancel"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/bkg_clickable"
            android:textSize="18sp"
            android:text="@android:string/cancel"
            android:textColor="#079fff" />

        <View
            android:id="@+id/dlg_edit_btn_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#eee" />

        <TextView
            android:id="@+id/dlg_edit_ok"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/bkg_clickable"
            android:textSize="18sp"
            android:text="@android:string/ok"
            android:textColor="#079fff" />

    </LinearLayout>

</LinearLayout>
