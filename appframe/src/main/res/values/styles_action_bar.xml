<resources>

    <style name="ActionBarLayout" >
        <item name="android:background">@color/cyan</item>
    </style>

    <style name="ActionBarBack" >
        <item name="android:padding">3dp</item>
        <item name="android:src">@drawable/btn_action_bar_back</item>
    </style>

    <style name="ActionBarMenu" >
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="ActionBarTitle" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ActionBarMenuDefaultTxtBtn" >
        <item name="android:textColor">@color/action_bar_menu_btn_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActionBarMenuDefaultImgBtn" >

    </style>
</resources>
