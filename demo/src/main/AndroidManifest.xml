<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lx.af.demo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".base.DemoApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BaseAppTheme" >

        <activity
            android:name=".activity.main.MainActivity"
            android:label="AppFrameDemo"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".activity.DemoFrame.ImageOperateDemo"
            android:label="Image Pick and Crop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" >
        </activity>
        <activity
            android:name=".activity.DemoFrame.CodeScannerDemo"
            android:screenOrientation="portrait"
            android:label="Bar Code Scan" >
        </activity>
        <activity
            android:name=".activity.DemoFrame.PostListActivity"
            android:screenOrientation="portrait"
            android:label="Post List" >
        </activity>
        <activity
            android:name=".activity.DemoFrame.ScrollViewFadeDemo"
            android:screenOrientation="portrait"
            android:label="ScrollView Fade" >
        </activity>


        <activity
            android:name=".activity.DemoWidget.FlowLayoutDemo"
            android:screenOrientation="portrait"
            android:label="ScrollView Fade" >
        </activity>
        <activity
            android:name=".activity.DemoWidget.VideoPlayViewDemo"
            android:label="Video"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.DemoWidget.AutoSlidePagerDemo"
            android:screenOrientation="portrait"
            android:label="Auto Slide Pager" >
        </activity>
        <activity
            android:name=".activity.DemoWidget.DanmakuLayoutDemo"
            android:screenOrientation="portrait"
            android:label="Danmaku" >
        </activity>
        <activity
            android:name=".activity.DemoWidget.DotCircleDemo"
            android:screenOrientation="portrait"
            android:label="Dot Circle" >
        </activity>
        <activity
            android:name=".activity.DemoWidget.SelectImageViewDemo"
            android:screenOrientation="portrait"
            android:label="Select Image Widget" >
        </activity>


        <activity
            android:name=".activity.DemoUtils.ViewPagerAutoFlipDemo"
            android:screenOrientation="portrait"
            android:label="Auto Slide Pager" >
        </activity>
        <activity
            android:name=".activity.DemoUtils.HomeKeyWatcherDemo"
            android:screenOrientation="portrait"
            android:label="Home Key Watcher" >
        </activity>


        <activity
            android:name=".activity.ActivityTest"
            android:screenOrientation="portrait"
            android:label="File Picker" >
        </activity>


    </application>

</manifest>
