<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lx.af.demo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".base.DemoApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BaseAppTheme" >

        <activity
            android:name=".activity.ActivityMain"
            android:label="Demo for AppFrame"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ActivityTest"
            android:screenOrientation="portrait"
            android:label="File Picker" >
        </activity>
        <activity
            android:name=".activity.ActivityPlayViewDemo"
            android:label="Video"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.ActivityImageOperateDemo"
            android:label="Image Pick and Crop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" >
        </activity>
        <activity
            android:name=".activity.ActivityHomeWatcherDemo"
            android:screenOrientation="portrait"
            android:label="Home Key Watcher" >
        </activity>
        <activity
            android:name=".activity.ActivityAutoSlidePager"
            android:screenOrientation="portrait"
            android:label="Auto Slide Pager" >
        </activity>
        <activity
            android:name=".activity.ActivitySwipeRefresh"
            android:screenOrientation="portrait"
            android:label="Auto Slide Pager" >
        </activity>
        <activity
            android:name=".activity.ActivityViewPager"
            android:screenOrientation="portrait"
            android:label="Auto Slide Pager" >
        </activity>
        <activity
            android:name=".activity.ActivityScanner"
            android:screenOrientation="portrait"
            android:label="Bar Code Scan" >
        </activity>

    </application>

</manifest>
