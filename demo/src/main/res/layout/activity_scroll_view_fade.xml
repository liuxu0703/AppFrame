<?xml version="1.0" encoding="utf-8"?>
<lx.af.view.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_scroll_view_fade_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <lx.af.view.RatioWidthRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            app:ratioByWidth="0.8" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="Test Scroll Fade"/>

            <TextView
                android:id="@+id/activity_scroll_view_fade_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:gravity="center"
                android:background="@color/l_green"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="Test Scroll Fade Reverse" />

        </lx.af.view.RatioWidthRelativeLayout>

        <TextView
            android:id="@+id/activity_scroll_view_fade_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:padding="15dp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</lx.af.view.ObservableScrollView>