<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_bkg_1"
    android:orientation="vertical">

    <lx.af.widget.SelectImageWidget
        android:id="@+id/activity_select_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="4dp"
        app:selectImageItemMargin="3dp"
        app:selectImageMaxCount="8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/text_color_hint"
        android:textSize="12sp"
        android:text="长按图片可编辑,删除" />

    <View
        style="@style/divider_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/activity_select_image_btn_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="get image path list" />

    <TextView
        android:id="@+id/activity_select_image_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@color/grey"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>
</LinearLayout>