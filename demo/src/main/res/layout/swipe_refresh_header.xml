<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <lx.af.view.SwipeRefresh.NestedViewPager
            android:id="@+id/swipe_refresh_header_pager"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/swipe_refresh_header_pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="6dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/swipe_refresh_header_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@color/l_green"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="Head Pictures" />
</LinearLayout>