<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dlg_bkg"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/dlg_multi_select_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/bkg_clickable"
        android:divider="#eee"
        android:dividerHeight="1px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/dlg_multi_select_cancel"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/bkg_clickable"
            android:textSize="18sp"
            android:text="@android:string/cancel"
            android:textColor="#079fff" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#eee" />

        <TextView
            android:id="@+id/dlg_multi_select_ok"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/bkg_clickable"
            android:textSize="18sp"
            android:text="@android:string/ok"
            android:textColor="#079fff" />

    </LinearLayout>
</LinearLayout>
