<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/loading_bkg_view_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null" />

        <lx.af.view.ProgressWheel
            xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/loading_bkg_view_progress"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            ProgressWheel:barLength="45dp"
            ProgressWheel:barColor="#cccccc"
            ProgressWheel:barWidth="4dp"
            ProgressWheel:rimColor="#10000000"
            ProgressWheel:rimWidth="4dp"
            ProgressWheel:contourColor="#00000000"
            ProgressWheel:spinSpeed="4dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/loading_bkg_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="36dp"
        android:gravity="center"
        android:textColor="#808080"
        android:textSize="16sp" />

</merge>